{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Start Go & Svelte",
            "configurations": [
                "Go Backend",
                "Svelte Frontend"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Go Backend",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/backend/main.go"
        },
        {
            "name": "Svelte Frontend",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "port": 5173
        }
    ]
}